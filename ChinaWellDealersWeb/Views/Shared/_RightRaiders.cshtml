        <h5><span>最强福利</span><a href="/Home/DemoList">更多>></a></h5>
        <ul>
            @foreach (var item in (List<Models.SqlMapModel.Sql_GameDemo>)ViewBag.NewsetGameDemo)
            {
                <li>
                    <a href="/Home/DemoDetails/@item.Id">
                        <img src="/Content/GameImg/@item.Img" alt="">
                        <p>@item.GameName</p>
                        <p>奖励<b>@item.PaySum</b>爽币</p>
                        <span>立即试玩</span>
                    </a>
                </li>
            }
        </ul>
    </div>
    <div class="rank">
        <h5><span>资讯排行</span></h5>
        <ul>
            @for (int i = 0; i < topNews.Count; i++)
            {
                if (i < 3)
                {
                    if (topNews[i].EditTitle != null && topNews[i].EditTitle != "")
                    {
                        <li><a href="/NewsInfo/NewsDetail/@topNews[i].Id"><span class="hot">@(i + 1)</span>@topNews[i].EditTitle</a></li>
                    }
