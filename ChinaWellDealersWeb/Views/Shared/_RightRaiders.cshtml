@{
    List<Models.MapModel.FrontNews> topNews = (List<Models.MapModel.FrontNews>)ViewData["ViewTopNews"];
    List<Models.MapModel.RaidersViewModel> CurrentMonthTopTen = (List<Models.MapModel.RaidersViewModel>)ViewData["CurrentMonthTopTen"];
   
}
<aside>
    <div class="extendstrate extendstrate1">
        <h5><span>攻略排行</span></h5>
        @for (int i = 0; i < CurrentMonthTopTen.Count; i++)
        {

            if (CurrentMonthTopTen[i].EditTitle != null && CurrentMonthTopTen[i].EditTitle != "")
            {
                <p><i class="@Html.Raw('i')@(i+0)"></i><a target="_blank" href="/Raiders/RaidersDetail/@CurrentMonthTopTen[i].Id" title="@CurrentMonthTopTen[i].EditTitle">@CurrentMonthTopTen[i].EditTitle</a></p>
            }
            else
            {
                <p><i class="@Html.Raw('i')@(i+0)"></i><a target="_blank" href="/Raiders/RaidersDetail/@CurrentMonthTopTen[i].Id" title="@CurrentMonthTopTen[i].Title">@CurrentMonthTopTen[i].Title</a></p>
            }
        }
    </div>

    <div class="kfkckuai">
        <div class="homekf2">
            <h5><span>最新开服</span><a href="/OPenServices/ServiceIndex">更多>></a></h5>
            <p class="kfkckuaiP">
                <span class="intime">时间</span>
                <span class="gamename">游戏名称</span>
                <span class="linesys">运营商</span>
                <span class="caozuo">操作</span>
            </p>
            <ul class="homekc2Ul">
               
            </ul>
        </div>
    </div>
