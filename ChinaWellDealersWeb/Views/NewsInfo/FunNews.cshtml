@{
    Layout = null;
}

<!DOCTYPE html>

<head>
    <meta charset="UTF-8">
    <title>游戏产业资讯_游戏新闻中心_新游资讯_热游动态_爽赞网</title>
    <meta name="keywords" content="最新游戏资讯,游戏动态,游戏更新动态,新游动态,最新游戏报道,中国游戏产业,爽赞网">
    <meta name="description" content="游戏新闻频道为玩家朋友提供最新的游戏更新动态和游戏行业报道，最有意思游戏趣闻及图片等内容">
    <link href="~/Content/Css/index.css" rel="stylesheet" />
    <link href="~/Content/Css/reset.css" rel="stylesheet" />
    <link href="~/Content/Css/amoywel.css" rel="stylesheet" />
    <link href="~/Content/Css/Public.css" rel="stylesheet" />
    <link href="~/Content/Css/lunbo.css" rel="stylesheet" />
    <link href="~/Content/Css/news.css" rel="stylesheet" />
    <link href="~/Content/Css/commercial.css" rel="stylesheet" />
    <link href="~/Content/Css/usename.css" rel="stylesheet" />
    <link href="~/Content/style/NavPager.css" rel="stylesheet" />
    <link href="/Content/Img/favicon.ico" type="image/x-icon" rel="shortcut icon" /> 
</head>
<body>
    @Html.Action("_TwoShuangzanHeader", "Home")
    <!-- 顶部导航 -->
    @Html.Action("ShuangzanHeader", "NewsInfo")
    <div class="wide details">当前位置：<a href="/Home/Index">爽赞网</a> > <a href="/NewsInfo/News">看新闻</a> > <span>娱乐八卦</span></div>
    <div class="info wide bagua clearfix">
        <form action="/NewsInfo/NewsSearchResult" method="get">
            <h6>
                <ul>
                    <li><a class="active">娱乐八卦</a></li>
                </ul>
                <span>
                    <input type="text" name="key" id="key" placeholder="输入关键词"><button>搜八卦</button>
                </span>
            </h6>
        </form>
        <div class="Gossipnews">
            <ul class="Gonews">
                @foreach (var item in (List<Models.MapModel.NewsViewModel>)ViewData["HappyNews"])
                {
                    <li>
                        <div class="gco1">
                            <a href="@Url.Action("FunNewsDetail", "NewsInfo", new {id=item.Id})"><img src="@MvcHtmlString.Create(Common.WebHelper.PickupImgUrl(item.Msg))"></a>
                        </div>
                        @if (item.EditTitle != null && item.EditTitle != "")
                        {
                            <p><a href="@Url.Action("FunNewsDetail", "NewsInfo", new {id=item.Id})">@item.EditTitle</a></p>
                        }
                        else
                        {
                            <p><a href="@Url.Action("FunNewsDetail", "NewsInfo", new {id=item.Id})">@item.Title</a></p>
                        }
                        <p>
                            <a href="javascript:void(0)"><time class="year">@item.InTime.ToString("yyyy")</time>-<time class="month">@item.InTime.ToString("MM")</time>-<time class="date">@item.InTime.ToString("dd")</time></a>
                            <a href="javascript:void(0)"><img src="/Content/Img/查看.png" alt=""><i class="readers">@item.ViewNum</i></a>
                            <a href="javascript:void(0)"><img src="/Content/Img/留言.png" alt=""><i class="replies">@item.MsgNum</i></a>
                        </p>
                    </li>
                }
            </ul>
            <div class="page">
                <ul id="paginator">
                    @MvcHtmlString.Create(Common.LaomaPager.ShowPageNavigate( (int)ViewData["pageSize"], (int)ViewData["pageIndex"], (int)ViewData["Total"]))
                </ul>
            </div>            
        </div>
        @Html.Action("_RightNews", "NewsInfo")
    </div> 
    <!-- 底部 -->
    @Html.Partial("_ShuangZanFooter")
    <script src="~/Content/js/jquery-1.11.1.min.js"></script>
    <script src="~/Content/js/jquery.SuperSlide.2.1.1.js"></script>
    <script src="~/Content/js/personal_use.js"></script>
    <script src="~/Content/js/Public.js"></script>
    <script src="~/Content/js/new_games.js"></script>
    <script src="~/Scripts/datapattern.js"></script>
</body>

