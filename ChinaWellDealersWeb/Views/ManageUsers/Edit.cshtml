@model Models.UserInfo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>  
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script type="text/javascript">
        function afterEdit(data) {
            //关闭对话框，刷新表格
            if (data == "ok") {
                window.parent.window.afterEdit();
            }
        }
        function submitFrm() {
            $("form").submit();
        }
    </script>

</head>
<body>
    @using (Ajax.BeginForm("Edit", new AjaxOptions() { OnSuccess = "afterEdit" }))
    {
       
    <table style="margin-top:28px;margin-left:30px;" cellspacing="10">
        <tr>
            <td>用户名</td>
            <td>
               <input type="text" name="UName" value="@Model.UName" />
            </td>
        </tr>       
        <tr>
            <td>角色名</td>
            <td>
                <input type="text" name="Name" value="@Model.Name" />
            </td>
        </tr>
        <tr>
            <td>手机号</td>
            <td>
                <input type="text" name="Tel" value="@Model.Tel" />
            </td>
        </tr>
        <tr>
            <td>新密码</td>
            <td>
                <input type="password" name="Pwd" id="Pwd" />
            </td>
        </tr>
    </table>          
    }
</body>
</html>
