    <script type="text/javascript">
        function submitForm() {
            var reg = /(http|ftp|https):\/\/[\w\-_]+(\.[\w\-_]+)+([\w\-\.,@@?^=%&:/~\+#]*[\w\-\@@?^=%&/~\+#])?/;

            var url = $('#url').val();
            if (!reg.test(url)) {
                layer.msg("提示：请输入正确的跳转链接!");
                return;
            }
            layer.confirm('提示：您是否已确认输入无误？', {
                skin: 'layui-layer-lan',
                btn: ['是的', '没有呀'] //按钮
            }, function () {
                $.ajax({
                    url: '/AdminData/AddAdvertInfo',
                    type: "post",
                    data: {
                        type: $('#type').val(),
                        startTime: $("#startTime").val() + " " + $("#time1").val() + ":0:0",
                        endTime: $("#endTime").val() + " " + $("#time2").val() + ":0:0",
                        state: $('#state').val(),
                        url: $('#url').val(),
                        title: $('#title').val(),
                        path: $('#path').val(),
                    },
                    success: function (data) {
                        if (data == "ok") {
                            layer.msg("恭喜：添加成功!");
                            window.setTimeout(function () {
                                window.location.href = "/AdminData/AdvertList";
                            }, 2000);
                        } else if (data == "no") {
                            layer.msg("提示：添加失败！");
                        } else {
                            layer.msg("提示：系统异常请稍候再试！");
                        }
                    },
                });
            });
        }

    </script>
</head>
