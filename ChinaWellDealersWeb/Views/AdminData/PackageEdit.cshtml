            }
            if ($.trim(giftName.val()) == "") {
                layer.msg("提示：请输入礼包名称!");
                giftName.focus();
                return;
            }
            if ($.trim(url.val()) == "") {
                layer.msg("提示：请输入游戏网址!");

                cards.focus();
                return;
            }
            if ($.trim(msg.val()) == "") {
                layer.msg("提示：请输入礼包内容!");
                msg.focus();
                return;
            }
            if ($.trim(memo.val()) == "") {
                layer.msg("提示：请输入礼包说明!");
                memo.focus();
                return;
            }
            layer.confirm('提示：您是否已确认编辑完毕？', {
                skin: 'layui-layer-lan',
                btn: ['是的', '没有呀'] //按钮
            }, function () {
                $.ajax({
                    url: '/AdminData/PackageEdit',
                    type: 'post',
                    data: {
                        // companyId: $('#companyId').val(),
                        Id:$('#Id').val(),
                        game: game.val().trim(),
                        serversname: publicserver.is(":checked") ? "通服" : serversname.val().trim(),
                        type: $("#type").val(),
                        giftName: giftName.val().trim(),
                        url: url.val().trim(),
                        msg: msg.val(),
                        memo: memo.val(),

                    },
                    success: function (data) {
                        if (data == "ok") {
                            layer.msg("恭喜：修改成功!");
                            window.setTimeout(function () {
                                window.location.href = "/AdminData/Package";
                            }, 2000);
                        }
                        else if (data == "no") {
                            layer.msg("提示：修改失败！");

                        } else if (data == "empty") {
                            layer.msg("提示：系统异常请稍候再试！");
                        }
                    }
                });
            });
        });
    });
</script>
