<script type="text/javascript">

  
    $(function () {
        $('#btnEdit').click(function () {
            var game = $("#game"),
                serversname = $("#serversname"),
                publicserver = $("#publicserver"),
                  giftName = $("#giftName"),
                  url = $("#url"),
                  msg = $("#msg"),
                  memo = $("#memo");

            if ($.trim(game.val()) == "") {
